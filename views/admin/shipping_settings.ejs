<%- include('../shared/top', { title }) %>

<div class="row" style="justify-content:space-between; align-items:flex-end">
  <div>
    <h1 class="h1">Admin â€“ Shipping</h1>
    <div class="muted small">Configure courier charges for West/East Malaysia (RM).</div>
  </div>
  <div class="actions icon-row">
    <div class="actions-group">
      <a class="btn btn-icon" href="/admin/products" title="Products" aria-label="Products" data-label="Products"><%- icon('store') %></a>
      <a class="btn btn-icon" href="/admin/settings" title="Settings" aria-label="Settings" data-label="Settings"><%- icon('gear') %></a>
    </div>
  </div>
</div>

<form method="post" action="/admin/site/shipping" class="card" style="padding:14px; margin-top:12px">
  <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

  <h2 class="h2" style="margin-top:0">Courier charges</h2>
  <div class="muted small" style="margin-top:-6px">Used for checkout preview and final order totals.</div>

  <div class="row" style="gap:14px; align-items:flex-start; margin-top:12px">
    <div class="col" style="min-width:280px">
      <label>West Malaysia (RM)</label>
      <input class="input" name="west_fee_rm" inputmode="decimal" value="<%= westFeeRm %>" required />
      <div class="muted small" style="margin-top:6px">Example: 8.00</div>
    </div>

    <div class="col" style="min-width:280px">
      <label>East Malaysia (RM)</label>
      <input class="input" name="east_fee_rm" inputmode="decimal" value="<%= eastFeeRm %>" required />
      <div class="muted small" style="margin-top:6px">Example: 18.00</div>
    </div>
  </div>

  <div class="row" style="justify-content:flex-end; margin-top:14px">
    <button class="btn btn-primary" type="submit">Save</button>
  </div>
</form>

<%- include('../shared/bottom') %>
