<%- include('../shared/top', { title }) %>

<div class="card" style="padding:16px; max-width:520px; margin:0 auto">
  <h1 class="h1">Reset password</h1>

  <form method="post" action="/reset-password">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
    <input type="hidden" name="token" value="<%= token %>" />

    <label>New password</label>
    <div class="password-field" data-password-field>
      <input class="input" type="password" name="new_password" minlength="8" required />
      <button class="btn btn-secondary password-toggle-btn" type="button" data-password-toggle-btn aria-pressed="false">Show</button>
    </div>

    <label>Confirm new password</label>
    <div class="password-field" data-password-field>
      <input class="input" type="password" name="confirm_password" minlength="8" required />
      <button class="btn btn-secondary password-toggle-btn" type="button" data-password-toggle-btn aria-pressed="false">Show</button>
    </div>

    <div class="actions" style="margin-top:12px">
      <button class="btn btn-primary" type="submit">Reset password</button>
    </div>
  </form>
</div>

<%- include('../shared/bottom') %>
